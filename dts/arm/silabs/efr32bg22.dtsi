#include "efr32bg2x.dtsi"
#include <mem.h>

/ {
	soc {
		stimer0: stimer@58000000 {
			compatible = "silabs,gecko-stimer";
			reg = <0x58000000 0x3054>;
			interrupts = <12 0>;
			clock-frequency = <32768>;
			prescaler = <1>;
			status = "disabled";
		};
	};
};

&sram0 {
	reg = <0x20000000 DT_SIZE_K(32)>;
};

&flash0 {
	reg = <0 DT_SIZE_K(512)>;
};
