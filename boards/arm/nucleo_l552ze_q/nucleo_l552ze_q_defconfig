CONFIG_SOC_SERIES_STM32L5X=y
CONFIG_SOC_STM32L552XX=y
# 4MHz system clock
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=4000000

# enable uart driver
CONFIG_SERIAL=y

# enable pinmux
CONFIG_PINMUX=y

# enable GPIO
CONFIG_GPIO=y

# clock configuration
CONFIG_CLOCK_CONTROL=y
# SYSCLK selection
CONFIG_CLOCK_STM32_SYSCLK_SRC_MSI=y
CONFIG_CLOCK_STM32_MSI_RANGE=6
# Peripheral bus clocks configuration
CONFIG_CLOCK_STM32_AHB_PRESCALER=1
CONFIG_CLOCK_STM32_APB1_PRESCALER=1
CONFIG_CLOCK_STM32_APB2_PRESCALER=1

# console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable MPU
CONFIG_ARM_MPU=y
